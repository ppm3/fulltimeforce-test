{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "composite": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "__tests__/*.ts"
  ],
  "parserOptions": {
    "project": [
      "./.eslintrc.js",
      "*.ts"
    ]
  },
  "exclude": ["node_modules", "./build", "__tests__", "jest.config.ts", "tsconfig.eslint.json", ".eslintrc.js"]
}
